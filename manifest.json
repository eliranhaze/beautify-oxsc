{
  "manifest_version": 3,
  "name": "Beautify Oxford Scholarship",
  "version": "0.1.2",

  "description": "Make Oxford Scholarship pages beautifully readable.",
  "icons": { "16": "icon-16.png",
             "48": "icon-48.png",
            "128": "icon-128.png" },

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["hyphens.js"],
    "matches": ["*://*/view/*"],
    "include_globs": ["*oxford*scholarship*"]
  }]
 
}
